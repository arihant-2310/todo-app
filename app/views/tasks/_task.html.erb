<div class="row justify-content-center" id="<%= dom_id task %>">
  <div class="col-8 mt-4">
    <div class="card text-center shadow mb-5 bg-white rounded">
      <div class="card-header">
        <span>By Arihant Hirawat</span>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= link_to task.name, task, class: "text-danger text-decoration-none" %></h5>
        <p class="card-text"><%= truncate(task.description, length: 50) %></p>
        <p><%= task.status %></p>
        <%= link_to "View", task, class: "btn btn-outline-success" %>
        <%= link_to "Edit", edit_task_path(task), class: "btn btn-outline-warning" %>
        <%= link_to "Delete", task_path(task), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
      </div>
      <div class="card-footer text-muted">
        <small>
          Created <%= time_ago_in_words(task.created_at) %> ago,
          Due on <%= time_ago_in_words(task.due_date) if task.due_date %>
        </small>
      </div>
    </div>
  </div>
</div>
